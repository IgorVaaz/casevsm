CREATE TABLE IF NOT EXISTS `crudvsm`.`CLIENTES` (
  `CLIENTE_ID` INT NOT NULL AUTO_INCREMENT,
  `NOME` VARCHAR(45) NULL,
  `CPF` VARCHAR(45) NULL,
  `ENDERECO` VARCHAR(45) NULL,
  `NUMERO` INT NULL,
  `BAIRRO` VARCHAR(45) NULL,
  `CEP` VARCHAR(9) NULL,
  `TELEFONE` VARCHAR(45) NULL,
  `EMAIL` VARCHAR(45) NULL,
  `CIDADE_ID` INT NOT NULL,
  PRIMARY KEY (`CLIENTE_ID`),
  INDEX `fk_CLIENTES_CIDADES_idx` (`CIDADE_ID` ASC) VISIBLE,
  CONSTRAINT `fk_CLIENTES_CIDADES`
    FOREIGN KEY (`CIDADE_ID`)
    REFERENCES `crudvsm`.`CIDADES` (`CIDADE_ID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION)
ENGINE = InnoDB;

CREATE TABLE IF NOT EXISTS `crudvsm`.`CIDADES` (
  `CIDADE_ID` INT NOT NULL AUTO_INCREMENT,
  `NOME` VARCHAR(45) NULL,
  `UF` VARCHAR(2) NULL,
  PRIMARY KEY (`CIDADE_ID`))
ENGINE = InnoDB;
